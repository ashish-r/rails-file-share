<div class="signup-form">
    <%= form_for(@user, url: user_path, method: 'patch') do |f| %>
		<h2>Edit Profile - <%= @user.user_name %></h2>
		<hr>
        <div class="form-group">
			<label class="<%= "#{'text-danger' if @user.errors[:full_name].any?}" %>">
                Full Name
            </label>
            <%= f.text_field :full_name, class: "form-control #{'is-invalid' if @user.errors[:full_name].any?}", 
                required: true %>
            <% if @user.errors[:full_name].any? %>
                <small class="text-danger">
                    <%= @user.errors[:full_name][0] %>
                </small> 
            <% end %>  
        </div>
        <div class="form-group">
			<label class="<%= "#{'text-danger' if @user.errors[:email].any?}" %>">
                Email Address
            </label>
            <%= f.email_field :email, class: "form-control #{'is-invalid' if @user.errors[:email].any?}", 
                required: true %>
            <% if @user.errors[:email].any? %>
                <small class="text-danger">
                    <%= @user.errors[:email][0] %>
                </small> 
            <% end %>  
        </div>
		<div class="form-group">
            <%= f.submit "Save", class: 'btn btn-primary btn-block btn-lg' %>
        </div>
    <% end %>
</div>
